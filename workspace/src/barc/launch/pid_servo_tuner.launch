<launch>
    <!-- Machines -->
    <machine name="odroid" address="10.0.0.1" user="odroid" timeout="20.0" env-loader="/home/odroid/barc/scripts/remote-machines/env_loader_odroid.sh"/>
    <machine name="this-pc" address="10.0.0.14" timeout="20.0"/>


    <!-- DEFINE PARAMETERS -->
    <!-- Vehicle -->
    <param name="L_a" type="double" value="0.125" />
    <param name="L_b" type="double" value="0.125" />
    <param name="m" type="double" value="1.98" />
    <param name="I_z" type="double" value="0.24" />

    <!-- ARDUINO -->
    <!--  * encoders and ultrasound sensors -->
    <node machine="odroid" pkg="rosserial_python" type="serial_node.py" name="arduino_node" >
        <param name="port" value="/dev/ttyUSB0" />
    </node>
    
    <!-- LOW LEVEL CONTROLLER -->
    <node machine="this-pc" pkg="barc" type="controller_low_level.py" name="low_level_controller" output="screen">
        <param name="motor_c0" value="0.0061" />
        <param name="motor_c1" value="0.071" />
        <param name="servo_c0" value="90.1" />
        <param name="servo_c1" value="-94.1" />
    </node>


    <node machine="this-pc" pkg="barc" type="servo_pid_tuner.py" name="servo_pid_tuner" output="screen" >
    </node>


</launch>
