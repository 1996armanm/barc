<launch>
     <!-- MACHINES -->
    <machine name="tx1" address="192.168.8.1" user="ubuntu" timeout="20.0" env-loader="$HOME/barc/scripts/remote-machines/env_loader_tx1.sh"/>
    <machine name="pc" address="192.168.8.127" timeout="20.0" />

    <!-- PARAMETERS -->
    <param name="L_a" type="double" value="0.125" />
    <param name="L_b" type="double" value="0.125" />
    <param name="m" type="double" value="1.98" />
    <param name="I_z" type="double" value="0.24" />

    <!-- CAM -->
    <node machine="tx1" pkg="uvc_camera" type="uvc_camera_node" name="barc_cam">
        <param name="index" value="0"/>
        <param name="device" value="/dev/video0"/>
        <param name="width" value="640"/>
        <param name="height" value="480"/>
    </node>

    <!-- IMU -->
    <node machine="tx1" pkg="myahrs_driver" type="myahrs_driver" name="myahrs_driver">
        <param name="port" value="/dev/ttyACM0" />
        <param name="baud_rate" value="115200" />
    </node>

    <!-- GPS -->
    <node machine="tx1" pkg="marvelmind_nav" type="hedge_rcv_bin" name="indoor_gps" args="/dev/ttyACM1"/>

    <!-- ENCODER / MOTOR / STEERING -->
    <node machine="tx1" pkg="rosserial_python" type="serial_node.py" name="arduino_node" >
        <param name="port" value="/dev/ttyUSB0" />
    </node>

    <!-- STATE ESTIMATION -->
    <node machine="pc" pkg="barc" type="state_estimation_SensorKinematicModel.py" name="state_estimation_dynamic" output="screen">
        <!-- ekf properties -->
        <param name="q_std" type="double" value="0.1" />

        <param name="psi_std" type="double" value="0.5" />
        <param name="v_std" type="double" value="1.0" />
        <param name="gps_std" type="double" value="2.0" />
        <param name="ang_v_std" type="double" value="0.8" />

        <param name="est_mode" type="double" value="1" />
    </node>

    <!-- MPC CONTROLLER -->
    <node machine="pc" pkg="barc" type="LMPC_node.jl" name="MPC" output="screen" />

    <!-- LOW LEVEL CONTROLLER -->
    <node machine="pc" pkg="barc" type="controller_low_level.py" name="low_level_controller" />

    <!-- RECORDER --> 
    <node machine="tx1" pkg="rosbag" type="record" name="rosbag_record" args="/imu/data /hedge_pos /image_raw/compressed /rc_inputs /vel_est /pos_infos" />

</launch>
