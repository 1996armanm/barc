<launch>
    <!-- DEFINE PARAMETERS -->
    <!-- Vehicle -->
    <param name="L_a" type="double" value="0.125" />
    <param name="L_b" type="double" value="0.125" />
    <param name="m" type="double" value="1.98" />
    <param name="I_z" type="double" value="0.24" />

    <!-- Tire -->
    <param name="tire_model/B" type="double" value="0.3" />
    <param name="tire_model/C" type="double" value="1.25" />
    <param name="tire_model/mu" type="double" value="0.234" />

    <!-- Control -->
    <param name="air_drag_coeff" type="double" value="0.1308" />
    <param name="friction" type="double" value="0.1711" />
    
    <!-- Further parameters -->
    <param name="est_mode" type="double" value="3" />

    <!-- Machines -->
    <machine name="odroid" address="192.168.100.100" user="odroid" timeout="20.0" env-loader="/home/odroid/barc/env_loader_odroid.sh"/>
    <machine name="this-pc" address="192.168.100.101" timeout="20.0" env-loader="/home/max/barc/env_loader_pc.sh"/>
    
    <!-- START NODES -->
    <!-- Simulator -->
    <!--node machine="this-pc" pkg="barc" type="barc_simulator_dyn.jl" name="barc_sim" output="screen" /-->
    <!-- Record -->
    <node machine="this-pc" pkg="barc" type="barc_record.jl" name="barc_record" output="screen" />

    <!-- Estimator -->
    <node machine="this-pc" pkg="barc" type="state_estimation_DynBkMdl.py" name="state_estimation_dynamic" output="screen">
        <!-- v_x estimation sample time-->
        <param name="dt_v_enc" type="double" value="0.2" />

        <!-- ekf properties -->
        <param name="q_std" type="double" value="0.1" />
        <param name="psi_std" type="double" value="0.5" />
        <param name="v_std" type="double" value="10.0" />
        <param name="gps_std" type="double" value="0.8" />
        <param name="v_x_min" type="double" value="0.2" />
        <param name="ang_v_std" type="double" value="0.8" />
        <param name="est_mode" type="double" value="4" />
        <param name="dt_v_enc" type="double" value="0.4" />
    </node>

    <!-- IMU -->
    <node machine="odroid" pkg="myahrs_driver" type="myahrs_driver" name="myahrs_driver">
        <param name="port" value="/dev/ttyACM0" />
        <param name="baud_rate" value="115200" />
    </node>

    <!-- GPS -->
    <node machine="odroid" pkg="marvelmind_indoor_gps" type="indoor_gps.py" name="indoor_gps" output="screen">
        <param name="port" value="/dev/ttyACM1" />
        <param name="baud" value="115200" />
    </node>

    <!-- ARDUINO -->
    <!--  * encoders and ultrasound sensors -->
    <node machine="odroid" pkg="rosserial_python" type="serial_node.py" name="arduino_node" >
        <param name="port" value="/dev/ttyUSB0" />
    </node>

</launch>
