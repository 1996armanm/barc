<launch>
    <!-- DEFINE PARAMETERS -->
    <!-- Vehicle -->
    <param name="L_a" type="double" value="0.125" />
    <param name="L_b" type="double" value="0.125" />

    <!-- Machines -->
    <machine name="odroid" address="192.168.100.100" user="odroid" timeout="20.0" env-loader="/home/odroid/barc/env_loader_odroid.sh"/>
    <machine name="this-pc" address="192.168.100.72" timeout="20.0" env-loader="/home/ugo/Github/barc/env_loader_pc.sh"/>
    
    <!-- Estimator -->
    <node machine="this-pc" pkg="barc" type="state_estimation.py" name="state_estimation_dynamic" output="screen"/>

    <!-- MPC CONTROL -->
    <node machine="this-pc" pkg="barc" type="simple_controller.py" name="MPC" output="screen" />

    <!-- LOW LEVEL CONTROLLER -->
    <node machine="this-pc" pkg="barc" type="controller_low_level.py" name="low_level_controller" />

    <!-- IMU -->
    <node machine="odroid" pkg="myahrs_driver" type="myahrs_driver" name="myahrs_driver">
        <param name="port" value="/dev/ttyACM0" />
        <param name="baud_rate" value="115200" />
    </node>

    <!-- GPS -->
    <node machine="odroid" pkg="marvelmind_nav" type="hedge_rcv_bin" name="indoor_gps" args="/dev/ttyACM1"/>
    
    <!-- ARDUINO -->
    <!--  * encoders and ultrasound sensors -->
    <node machine="odroid" pkg="rosserial_python" type="serial_node.py" name="arduino_node" >
        <param name="port" value="/dev/ttyUSB0" />
    </node>
    
    <!-- Record the experiment data -->
    <node pkg="rosbag" type="record" name="rosbag_record" args=" --all" />
</launch>
